# VibeVoice FastAPI Configuration

# Model Configuration
MODEL_PATH=/models/VibeVoice-Realtime-0.5B
MODEL_REPO=microsoft/VibeVoice-Realtime-0.5B
EXPERIMENTAL_VOICES_PATH=/models/experimental_voices

# Auto-download settings
AUTO_DOWNLOAD_MODEL=true
DOWNLOAD_EXPERIMENTAL_VOICES=false

# Optional: Hugging Face token (for private models or better download speeds)
# HF_TOKEN=your_huggingface_token_here

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=info

# API Configuration
MAX_TEXT_LENGTH=10000
AUDIO_OUTPUT_DIR=/output

# Optional: Authentication
# API_KEY=your-secret-key-here

# Optional: Rate Limiting
# RATE_LIMIT_PER_MINUTE=60